{
  "private": true,
  "workspaces": [
    "src/modules/*"
  ],
  "scripts": {
    "build-dev": "vite build --mode=dev --logLevel=error",
    "build-prd": "vite build --mode=prd --logLevel=error",
    "build-qa": "vite build --mode=qa --logLevel=error",
    "lint": "eslint --ext .js,.jsx,.vue . --fix && stylelint **/*.{css,scss,vue} --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "prettier": "prettier --write **/*.ts **/*.html",
    "preview": "vite preview",
    "serve": "vite serve",
    "sort-package-json": "sort-package-json package.json"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,scss,vue}": [
      "stylelint --fix",
      "git add"
    ],
    "*.{ts,tsx,html}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "0.27.2",
    "dayjs": "1.11.5",
    "kw-lib": "2.0.39",
    "lodash-es": "4.17.21",
    "realgrid": "2.6.1",
    "vue": "3.2.47",
    "vue-i18n": "9.2.2",
    "vue-router": "4.1.5",
    "vuex": "4.0.2"
  },
  "devDependencies": {
    "eslint": "8.25.0",
    "husky": "8.0.1",
    "lint-staged": "12.5.0",
    "prettier": "2.7.1",
    "sort-package-json": "1.57.0",
    "stylelint": "14.13.0"
  },
  "bundledDependencies": [
    "~collaboration",
    "~common",
    "~sms-common"
  ],
  "bundleDependencies": [
    "~collaboration",
    "~common",
    "~sms-common"
  ]
}
